{
  "name": "@oracle-fury/tools",
  "version": "0.1.0",
  "description": "CLI tools for Oracle Fury content creation and validation",
  "type": "module",
  "bin": {
    "oracle-fury": "./dist/cli.js"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules .turbo"
  },
  "dependencies": {
    "@oracle-fury/core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}