{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://oracle-fury.dev/schemas/savegame.schema.json",
  "type": "object",
  "required": ["version", "seed", "state", "choices"],
  "properties": {
    "version": { "type": "integer", "minimum": 0 },
    "seed": { "type": "integer", "minimum": 0 },
    "state": { "type": ["object", "array", "string", "number", "boolean", "null"] },
    "choices": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "value"],
        "properties": {
          "id": { "type": "string" },
          "value": { "type": ["string", "number", "boolean"] }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}