{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ModuleManifest",
  "type": "object",
  "required": ["id", "version", "engineVersion"],
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
    "version": { "type": "string" },
    "engineVersion": { "type": "string" },
    "capabilities": { "type": "array", "items": { "type": "string" } }
  }
}