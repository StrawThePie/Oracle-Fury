{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Faction",
  "type": "object",
  "required": ["id", "name"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "reputation": { "type": "integer", "minimum": -5, "maximum": 5 }
  }
}