{
  "name": "@oracle-fury/app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview --host",
    "typecheck": "tsc -b --noEmit",
    "test": "vitest run --reporter=dot || true",
    "dev:test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier -w \"**/*.{ts,tsx,js,json,css,md}\"",
    "e2e": "playwright test"
  },
  "dependencies": {
    "@oracle-fury/core": "workspace:*",
    "@tanstack/react-query": "^5.51.21",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vitest": "^2.0.5",
    "@playwright/test": "^1.47.2"
  }
}