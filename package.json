{
  "name": "oracle-fury",
  "version": "0.1.0",
  "private": true,
  "description": "Oracle Fury monorepo: deterministic narrative RPG engine with web UI",
  "license": "MIT",
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "build": "pnpm -r --filter ./core --filter ./tools --filter ./app run build",
    "test": "pnpm -r --filter ./core --filter ./tools --filter ./app run test",
    "typecheck": "pnpm -r --filter ./core --filter ./tools --filter ./app run typecheck",
    "lint": "pnpm -r --filter ./core --filter ./tools --filter ./app run lint",
    "format": "pnpm -r --filter ./core --filter ./tools --filter ./app run format",
    "dev": "pnpm --filter @oracle-fury/app dev --host"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}